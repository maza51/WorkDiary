@using WorkDiary.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

@if (User.Identity.IsAuthenticated)
{
    return;
}

<div class="form-signin container d-flex flex-wrap justify-content-center p-2">
    <form asp-controller="Account" asp-action="Register" method="post" role="form">
        <h1 class="h3 mb-3 fw-normal">Register</h1>

        <div class="form-floating">
            <input asp-for="UserName" type="text" class="form-control username">
            <label asp-for="UserName" class="text-dark">Name</label>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control password">
            <label asp-for="Password" class="text-dark">Password</label>
        </div>

        <div class="form-floating">
            <input asp-for="ConfirmPassword" type="password" class="form-control confirmpassword">
            <label asp-for="ConfirmPassword" class="text-dark">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
    </form>
</div>